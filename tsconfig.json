{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "target": "ES2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
